{
  "name": "@freik/arduino2proj",
  "version": "0.4.1",
  "description": "Arduino platform and library to Makefile conversion tool",
  "type": "module",
  "module": "./lib/main.js",
  "repository": "https://github.com/kevinfrei/Arduino2Make.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "MIT",
  "bin": "./ar2mak.js",
  "files": ["lib/**/*", "ar2mak.js"],
  "scripts": {
    "release": "rimraf ./lib && tsc -p tsconfig.opt.json && ftool minify -i -r lib",
    "build": "rimraf ./lib && tsc",
    "postinstall": "husky install",
    "prepublishOnly": "yarn run chk && pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "yarn run build",
    "format": "ftool format",
    "lint": "eslint src --fix --ext ts",
    "chk": "yarn run build && yarn run lint"
  },
  "dependencies": {
    "@freik/core-utils": "^1.2.0"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.4.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "pinst": "^3.0.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.0.6",
    "typescript": "^4.9.4"
  },
  "packageManager": "yarn@3.1.1"
}
