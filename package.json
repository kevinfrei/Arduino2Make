{
  "name": "@freik/arduino2proj",
  "version": "0.8.4",
  "description": "Arduino platform and library to Makefile conversion tool",
  "type": "module",
  "module": "./lib/main.js",
  "repository": "https://github.com/kevinfrei/Arduino2Make.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "MIT",
  "bin": "./ar2mak.js",
  "files": [
    "lib/*.js",
    "lib/downloader/*.js",
    "lib/targets/*.js",
    "lib/main.d.ts",
    "ar2mak.js"
  ],
  "scripts": {
    "release": "bun rm ./lib && tsc -p tsconfig.opt.json && tools make-module --minify src/*.ts src/downloader/*.ts src/targets/*.ts",
    "build": "bun rm ./lib && tsc -p tsconfig.opt.json && tools make-module --minify src/*.ts src/downloader/*.ts src/targets/*.ts",
    "_build": "bun rm ./lib && tsc",
    "format": "tools format",
    "lint": "eslint --config eslint.config.mjs --fix src/*.ts src/downloader/*.ts src/targets/*.ts",
    "chk": "bun run build && bun run lint && bun run test",
    "test": "bun test",
    "watch": "bun test --watch",
    "pre-commit": "bun run format",
    "pre-push": "bun run chk"
  },
  "dependencies": {
    "@freik/typechk": "^0.6.4",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.6.11",
    "@freik/node-utils": "^1.6.7",
    "@freik/workspace": "^0.6.4",
    "@types/bun": "^1.2.4",
    "@types/minimist": "^1.2.5",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "packageManager": "bun@1.2.4"
}
