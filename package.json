{
  "name": "@freik/arduino2proj",
  "version": "0.8.4",
  "description": "Arduino platform and library to Makefile conversion tool",
  "type": "module",
  "module": "./lib/main.js",
  "repository": "https://github.com/kevinfrei/Arduino2Make.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "MIT",
  "bin": "./ar2mak.js",
  "files": [
    "lib/*.js",
    "lib/downloader/*.js",
    "lib/targets/*.js",
    "lib/main.d.ts",
    "ar2mak.js"
  ],
  "scripts": {
    "release": "bun rm ./lib && tsc -p tsconfig.opt.json && tools minify -i -r lib",
    "build": "bun rm ./lib && tsc -p tsconfig.opt.json && tools minify -i -r lib",
    "_build": "bun rm ./lib && tsc",
    "format": "tools format",
    "lint": "eslint src --fix src/**/*.ts",
    "chk": "bun run build && bun run lint && bun run test",
    "test": "bun test",
    "watch": "jest --config jestconfig.json --watch",
    "pre-commit": "bun run format",
    "pre-push": "bun run chk",
    "prepare": "husky install"
  },
  "dependencies": {
    "@freik/typechk": "^0.6.4",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.6.11",
    "@freik/node-utils": "^1.6.7",
    "@freik/workspace": "^0.6.4",
    "@types/bun": "^1.1.14",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
