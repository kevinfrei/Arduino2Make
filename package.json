{
  "name": "@freik/arduino2proj",
  "version": "0.8.4",
  "description": "Arduino platform and library to Makefile conversion tool",
  "type": "module",
  "module": "./lib/main.js",
  "repository": "https://github.com/kevinfrei/Arduino2Make.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "MIT",
  "bin": "./ar2mak.js",
  "files": [
    "lib/*.js",
    "lib/downloader/*.js",
    "lib/targets/*.js",
    "lib/main.d.ts",
    "ar2mak.js"
  ],
  "scripts": {
    "release": "rimraf ./lib && tsc -p tsconfig.opt.json && ftool minify -i -r lib",
    "build": "rimraf ./lib && tsc -p tsconfig.opt.json && ftool minify -i -r lib",
    "_build": "rimraf ./lib && tsc",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "bun run release",
    "format": "ftool format",
    "lint": "eslint src --fix src/**/*.ts",
    "chk": "bun run build && bun run lint && bun run test",
    "test": "jest --config jestconfig.json",
    "watch": "jest --config jestconfig.json --watch",
    "pre-commit": "bun run format",
    "pre-push": "bun run chk"
  },
  "dependencies": {
    "@freik/typechk": "^0.5.12",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.6.10",
    "@freik/node-utils": "^1.6.4",
    "@types/bun": "^1.1.6",
    "@types/jest": "^29.5.12",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "pinst": "^3.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.3",
    "typescript": "^5.5.3"
  }
}
