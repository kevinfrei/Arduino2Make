{
  "name": "@freik/arduino2proj",
  "version": "0.5.3",
  "description": "Arduino platform and library to Makefile conversion tool",
  "type": "module",
  "module": "./lib/main.js",
  "repository": "https://github.com/kevinfrei/Arduino2Make.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "MIT",
  "bin": "./ar2mak.js",
  "files": ["lib/**/*", "ar2mak.js"],
  "scripts": {
    "release": "rimraf ./lib && tsc -p tsconfig.opt.json && ftool minify -i -r lib",
    "build": "rimraf ./lib && tsc",
    "postinstall": "husky install",
    "prepublishOnly": "yarn run chk && pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "yarn run build",
    "format": "ftool format",
    "lint": "eslint src --fix --ext ts",
    "chk": "yarn run build && yarn run lint",
    "test": "jest --config jestconfig.json",
    "watch": "jest --config jestconfig.json --watch"
  },
  "dependencies": {
    "@freik/core-utils": "^1.3.1"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.4.5",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.2",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "pinst": "^3.0.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "packageManager": "yarn@3.3.1"
}
