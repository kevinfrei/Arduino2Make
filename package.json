{
  "name": "arduino2make",
  "version": "0.4.2",
  "description": "Arduino platform and library to Makefile conversion tool",
  "type": "module",
  "module": "./lib/main.js",
  "repository": "https://github.com/kevinfrei/Arduino2Make.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "MIT",
  "bin": {
    "er": "./lib/tools.js"
  },
  "files": ["lib/**/*", "ar2mak.js"],
  "scripts": {
    "release": "rimraf ./lib && tsc -p tsconfig.opt.json && er minify -i -r lib",
    "build": "rimraf ./lib && tsc",
    "postinstall": "husky install && yarn run build",
    "prepare": "yarn run build",
    "format": "prettier --write \"*.js\" \"*.json\" \"*.md\" \"src/*.ts\"",
    "lint": "eslint src --fix --ext ts",
    "chk": "yarn run lint"
  },
  "dependencies": {
    "@freik/core-utils": "^1.2.0"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.4.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "packageManager": "yarn@3.1.1"
}
