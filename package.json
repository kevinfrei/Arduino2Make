{
  "name": "@freik/arduino2proj",
  "version": "0.7.4",
  "description": "Arduino platform and library to Makefile conversion tool",
  "type": "module",
  "module": "./lib/main.js",
  "repository": "https://github.com/kevinfrei/Arduino2Make.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "MIT",
  "bin": "./ar2mak.js",
  "files": ["lib/**/*", "ar2mak.js"],
  "scripts": {
    "release": "rimraf ./lib && tsc -p tsconfig.opt.json && rimraf ./lib/__test__ && ftool minify -i -r lib",
    "build": "rimraf ./lib && tsc && rimraf ./lib/__test__",
    "postinstall": "husky install",
    "prepublishOnly": "yarn run chk && yarn pinst --disable",
    "postpublish": "yarn pinst --enable",
    "prepare": "yarn run release",
    "format": "ftool format",
    "lint": "eslint src --fix --ext ts",
    "chk": "yarn run build && yarn run lint && yarn run test",
    "test": "jest --config jestconfig.json",
    "watch": "jest --config jestconfig.json --watch"
  },
  "dependencies": {
    "@freik/core-utils": "^1.3.5",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.4.10",
    "@freik/node-utils": "^1.2.6",
    "@types/jest": "^29.5.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.9",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "packageManager": "yarn@3.5.0"
}
