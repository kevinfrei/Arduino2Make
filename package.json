{
  "name": "@freik/arduino2proj",
  "version": "0.7.6",
  "description": "Arduino platform and library to Makefile conversion tool",
  "type": "module",
  "module": "./lib/main.js",
  "repository": "https://github.com/kevinfrei/Arduino2Make.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "MIT",
  "bin": "./ar2mak.js",
  "files": ["lib/**/*", "ar2mak.js"],
  "scripts": {
    "release": "rimraf ./lib && tsc -p tsconfig.opt.json && yarn ftool minify -i -r lib",
    "build": "rimraf ./lib && tsc",
    "postinstall": "husky install",
    "prepublishOnly": "yarn run chk && yarn pinst --disable",
    "postpublish": "yarn pinst --enable",
    "prepare": "yarn run build",
    "format": "yarn ftool format",
    "lint": "eslint src --fix --ext ts",
    "chk": "yarn run build && yarn run lint && yarn run test",
    "test": "jest --config jestconfig.json",
    "watch": "jest --config jestconfig.json --watch"
  },
  "dependencies": {
    "@freik/typechk": "^0.5.0",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.6.0",
    "@freik/node-utils": "^1.3.4",
    "@types/jest": "^29.5.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.6.0"
}
