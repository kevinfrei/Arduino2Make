{
  "name": "arduino2make",
  "version": "0.3.1",
  "description": "Arduino platform and library to Makefile conversion tool",
  "type": "module",
  "module": "./lib/main.js",
  "repository": "https://github.com/kevinfrei/Arduino2Make.git",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "MIT",
  "bin": {
    "er": "./lib/tools.js"
  },
  "files": [
    "lib/**/*",
    "ar2mak.js"
  ],
  "scripts": {
    "release": "rimraf ./lib && tsc -p tsconfig.opt.json && er minify -i -r lib",
    "build": "rimraf ./lib && tsc",
    "postinstall": "husky install && yarn run build",
    "prepare": "yarn run build",
    "format": "prettier --write \"*.js\" \"*.json\" \"*.md\" \"src/*.ts\"",
    "lint": "eslint src --fix --ext ts",
    "chk": "yarn run lint"
  },
  "dependencies": {
    "@freik/core-utils": "^1.0.0"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.2.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  },
  "packageManager": "yarn@3.1.1"
}
