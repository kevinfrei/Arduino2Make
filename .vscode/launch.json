  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "preLaunchTask": "npm: build",
      "program": "${workspaceFolder}/dbg.js",
      "runtimeArgs": [],
      "args": [
        "--config:adafruit-make-config.json",
        "libs/Adafruit",
        "libs/BusIO",
        "libs/GFX",
        "libs/NeoPixel",
        "libs/SSD1306",
        "libs/TinyUSB",
        "libs/nRFCrypto"
      ],
      "cwd": "${workspaceFolder}/../FreiKey/src",
      // I apparently need to set this to get node debugging working :/
      "env": {
        "PATH": "/usr/local/bin"
      }
    }
  ]
}
