{
  "search.exclude": {
    "public/**/*.js": true,
    "public/**/*.js.map": true,
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "build": true,
    "dist": true,
    "yarn*.l*": true,
    "LICENSE*": true,
    ".*": true
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "prettier.configPath": ".prettierrc",
  "json.format.enable": false,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  // The path to the `bun` executable.
  "bun.runtime": "C:/Users/freik/.bun/bin/bun.exe",
  // If support for Bun should be added to the default "JavaScript Debug Terminal".
  "bun.debugTerminal.enabled": true,
  // If the debugger should stop on the first line of the program.
  "bun.debugTerminal.stopOnEntry": true,
  // Glob pattern to find test files. Defaults to the value shown below.
  "bun.test.filePattern": "**/*{.test.,.spec.,_test_,_spec_}{js,ts,tsx,jsx,mts,cts}"
}
